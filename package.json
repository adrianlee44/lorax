{
  "name": "lorax",
  "version": "3.0.0",
  "description": "A node module which reads the git log and create a human readable changelog",
  "main": "lib/lorax.js",
  "bin": "bin/lorax",
  "files": [
    "bin/lorax",
    "build/**/*"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "prepublishOnly": "tsc",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "npm run clean; npm run lint; tsc; npm run coverage",
    "unit-test": "tsc; ava",
    "coverage": "nyc ava",
    "report": "nyc report --reporter=lcov",
    "clean": "rm -rf coverage/ build/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adrianlee44/lorax.git"
  },
  "keywords": [
    "log",
    "changelog",
    "generator",
    "git",
    "markdown"
  ],
  "author": {
    "name": "Adrian Lee",
    "email": "208855+adrianlee44@users.noreply.github.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianlee44/lorax/issues"
  },
  "homepage": "https://github.com/adrianlee44/lorax",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/findup-sync": "^4.0.4",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "ava": "^3.15.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "ts-node": "^9.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "commander": "^7.0.0",
    "findup-sync": "^4.0.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
