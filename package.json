{
  "name": "lorax",
  "version": "3.0.0",
  "description": "A node module which reads the git log and create a human readable changelog",
  "exports": "./lib/lorax.js",
  "bin": "bin/lorax",
  "files": [
    "bin/lorax",
    "build/**/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "scripts": {
    "compile": "tsc",
    "prepublishOnly": "tsc",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "npm run clean; npm run lint; tsc; npm run coverage",
    "jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "coverage": "npm run jest -- --coverage",
    "report": "npm run jest -- --coverage --coverageReporters=lcov",
    "clean": "rm -rf coverage/ build/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adrianlee44/lorax.git"
  },
  "keywords": [
    "log",
    "changelog",
    "generator",
    "git",
    "markdown"
  ],
  "author": {
    "name": "Adrian Lee",
    "email": "208855+adrianlee44@users.noreply.github.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianlee44/lorax/issues"
  },
  "homepage": "https://github.com/adrianlee44/lorax",
  "devDependencies": {
    "@types/findup-sync": "^4.0.5",
    "@types/jest": "^29.5.14",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-plugin-prettier": "^5.5.4",
    "execa": "^9.6.0",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "mock-fs": "^5.5.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "findup-sync": "^5.0.0"
  }
}
