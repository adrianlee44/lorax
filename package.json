{
  "name": "lorax",
  "version": "3.0.0",
  "description": "A node module which reads the git log and create a human readable changelog",
  "exports": "./lib/lorax.js",
  "bin": "bin/lorax",
  "files": [
    "bin/lorax",
    "build/**/*"
  ],
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "scripts": {
    "compile": "tsc",
    "prepublishOnly": "tsc",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "npm run clean; npm run lint; tsc; npm run coverage",
    "unit-test": "ava",
    "coverage": "nyc ava",
    "report": "nyc report --reporter=lcov",
    "clean": "rm -rf coverage/ build/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adrianlee44/lorax.git"
  },
  "keywords": [
    "log",
    "changelog",
    "generator",
    "git",
    "markdown"
  ],
  "author": {
    "name": "Adrian Lee",
    "email": "208855+adrianlee44@users.noreply.github.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianlee44/lorax/issues"
  },
  "homepage": "https://github.com/adrianlee44/lorax",
  "devDependencies": {
    "@types/findup-sync": "^4.0.4",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "ava": "^5.3.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "execa": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "findup-sync": "^5.0.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  }
}
