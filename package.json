{
  "name": "lorax",
  "version": "3.0.0",
  "description": "A node module which reads the git log and create a human readable changelog",
  "main": "lib/lorax.js",
  "bin": "bin/lorax",
  "files": [
    "bin/lorax",
    "build/**/*"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "npm run clean && npm run lint && tsc && npm test",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "npm run coverage",
    "coverage": "nyc ava",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "clean": "rm -rf coverage/ build/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adrianlee44/lorax.git"
  },
  "keywords": [
    "log",
    "changelog",
    "generator",
    "git",
    "markdown"
  ],
  "author": {
    "name": "Adrian Lee",
    "email": "adrian@adrianlee.me",
    "url": "http://www.adrianlee.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianlee44/lorax/issues"
  },
  "homepage": "https://github.com/adrianlee44/lorax",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/findup-sync": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "ava": "^3.7.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "matchdep": "^2.0.0",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "commander": "^5.0.0",
    "findup-sync": "^4.0.0"
  },
  "ava": {
    "files": [
      "test/**/*_test.js"
    ],
    "nodeArguments": [
      "--experimental-modules"
    ]
  }
}
